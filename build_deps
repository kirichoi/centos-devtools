#!/bin/bash

set -e

wget http://mirror.internode.on.net/pub/gnu/gmp/gmp-6.1.1.tar.bz2 -O - | tar xj
cd gmp-6.1.1
./configure --prefix=/opt/devtools-6.2 --libdir=/opt/devtools-6.2/lib64
make -j4
make install
cd ..

wget http://www.mpfr.org/mpfr-current/mpfr-3.1.4.tar.bz2 -O - | tar xj
cd mpfr-3.1.4
./configure --prefix=/opt/devtools-6.2 --libdir=/opt/devtools-6.2/lib64
make -j4
make install
cd ..

wget http://www.multiprecision.org/mpc/download/mpc-1.0.3.tar.gz -O - | tar xz
cd mpc-1.0.3
./configure --prefix=/opt/devtools-6.2 --libdir=/opt/devtools-6.2/lib64
make -j4
make install
cd ..
