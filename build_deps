#!/bin/bash

set -e

wget http://nixos.org/releases/patchelf/patchelf-0.9/patchelf-0.9.tar.gz -O - | tar xz
cd patchelf-0.9
LDFLAGS="$LDFLAGS -Wl,-rpath,/opt/devtools-6.2/lib64" ./configure --prefix=/opt/devtools-6.3
make -j4
make install
cd -

wget http://mirror.internode.on.net/pub/gnu/gmp/gmp-6.1.2.tar.bz2 -O - | tar xj
cd gmp-6.1.2
./configure --prefix=/opt/devtools-6.3 --libdir=/opt/devtools-6.3/lib64
make -j4
make install
cd ..

wget http://www.mpfr.org/mpfr-current/mpfr-3.1.5.tar.bz2 -O - | tar xj
cd mpfr-3.1.5
./configure --prefix=/opt/devtools-6.3 --libdir=/opt/devtools-6.3/lib64
make -j4
make install
cd ..

wget http://www.multiprecision.org/mpc/download/mpc-1.0.3.tar.gz -O - | tar xz
cd mpc-1.0.3
./configure --prefix=/opt/devtools-6.3 --libdir=/opt/devtools-6.3/lib64
make -j4
make install
cd ..
